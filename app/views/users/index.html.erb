<h1>Users</h1>
<table class='overview'>
  <thead>
    <tr>
      <% ['Login','Name','Email','Holiday Allowance','Holiday Remaining','Admin'].each do |header| %>
        <th><%=header%></th>
      <% end  %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.login, user_path(user) %></td>
        <% ['name','email','holiday_allowance','holiday_remaining','admin'].each do |attribute| %>
          <td><%= attribute_display(user,attribute) %></td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>